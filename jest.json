{
  "testEnvironment": "node",
  "moduleDirectories": ["<rootDir>", "<rootDir>tests", "node_modules"],
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "testMatch": ["**/tests/**/*.spec.ts"],
  "transformIgnorePatterns": ["^.+\\.js$"],
  "testPathIgnorePatterns": [
    "<rootDir>/coverage",
    "<rootDir>/examples",
    "<rootDir>/node_modules",
    "<rootDir>/types"
  ],
  "collectCoverageFrom": ["lib/**/*.ts", "register.ts"]
}
